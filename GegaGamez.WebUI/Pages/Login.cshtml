@page
@model GegaGamez.WebUI.Pages.LoginModel
@{
    ViewData ["login"] = true;

}

<div class="page-content-header border-primary ">
            <a class="go-back-arrow" href="#"><i class="fa-solid fa-arrow-left font-primary"></i></a>
            <h2 class="font-contrast title">Login</h2>
</div>

<form method="post" class="vertical-container auth-form" id="login-form">
    <div class="vertical-container">
        <label for="username">Username</label>
        <input id="username" asp-for="Username" class="border-primary bg-secondary font-primary" />
    </div>

    <div class="vertical-container">
        <label for="password">Password</label>
        <input id="password" asp-for="Password" class="border-primary bg-secondary font-primary" />
    </div>

    <div class="flex-container" id="auth-btn-group">
        <button id="login" type="submit" class="btn-contrast horizontal-flex-container rounded">Login</button>
        <a href="#" class="">Forgot password?</a>
    </div>
</form>