@page
@model GegaGamez.WebUI.Pages.LoginModel
@{
    ViewData ["login"] = true;
}

<div class="page-content-header border-primary ">
    <a class="go-back-arrow" href="#"><i class="fa-solid fa-arrow-left font-primary"></i></a>
    <h2 class="font-contrast title">Login</h2>
</div>

<form method="post" class="vertical-container auth-form" id="login-form">
    <div class="vertical-container">
        <label asp-for="LoginForm.Username"></label>
        <input asp-for="LoginForm.Username" class="border-primary bg-secondary font-primary" />
    </div>

    <div class="vertical-container">
        <label asp-for="LoginForm.Password"></label>
        <input type="password" asp-for="LoginForm.Password" class="border-primary bg-secondary font-primary" />
    </div>

    <div class="flex-container" id="auth-btn-group">
        <button type="submit" class="btn-contrast horizontal-flex-container rounded">Login</button>
        <a href="#">Forgot password?</a>
    </div>
</form>