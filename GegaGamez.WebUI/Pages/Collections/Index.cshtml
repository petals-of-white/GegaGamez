@page
@model GegaGamez.WebUI.Pages.Collections.IndexModel
@{
    bool logedIn = true;
    bool authorized = true;
}
<section id="collection-full-info">
    <header id="collection-header" class="border-primary">
        <a class="go-back-arrow" onclick="history.go(-1);"><i class="fa-solid fa-arrow-left font-primary"></i></a>
        <h2 id="collection-name" class="font-contrast">Collection name</h2>
    </header>
</section>
<article class="flex-container game-item">
    <img class="img-standard game-img hover-shadow" src="https://upload.wikimedia.org/wikipedia/ru/thumb/c/c5/MassEffect_Xbox.jpg/261px-MassEffect_Xbox.jpg" alt="Alternate Text" />

    <div class="text-info-block">
        <h3 class="game-title-small">Mass Effect</h3>

        <span class="rating-small">
            8/10
        </span>

        <span class="font-secondary">
            2006, Developer
        </span>

        <span class="game-description-small">
            A small description. This fight will be your last!
        </span>
    </div>

    <div class="btn-group game-action-buttons">
        @if (logedIn && authorized){
            // showCollectionModal argument (id) should be generated by server (Game Id)
            <button onclick="showCollectionModal(1002)" class="btn-contrast rounded">Move to</button>

            //same thing
            <button onclick="showRemoveFromCollectionModal(1002)" class="btn-contrast rounded">Remove</button>
        }
    </div>
</article>


<!-- MOVE GAME TO COLLECTION modal!!! -->
<form method="post" id="move-game-to-collection-modal" class="popup-interactive bg-secondary border-primary">
    <h3 class="font-contrast">
        Select collection:
    </h3>
    <input type="number" name="id" readonly />
    <select title="Collection">
        @foreach (var defaultCollection in new List<string>())
        {
            <option value="Planned">Planned</option>
        }

        @foreach(var userCollection in new List<string>())
        {
            <option value="Favorites or something">My Absolute favorites</option>
        }

        <!--!!! REMOVE THIS LATER !!!-->
        <option value="Planned">Planned</option>
        <option value="Playing">Playing</option>
        <option value="Completed">Completed</option>
        <option value="Dropped">Dropped</option>

        <option value="Planned">My Favorites</option>
        <option value="Playing">To me whey hey hey YEAH!</option>
        <option value="Completed">Lorem Ipsum</option>
        <option value="Dropped">Dolor sit amet</option>
    </select>
    <section class="popup-actions">
        <button type="submit" class="borderless">Remove the game from COLLECTION NAME</button>
        <button type="button" onclick="hideCollectionModal()" class="btn-contrast rounded">Cancel</button>
    </section>
</form>


<!-- REMOVE GAME FROM COLLECTION modal!!! -->
<form method="post" id="remove-game-from-collection-modal" class="popup-interactive bg-secondary border-primary">
    <h3 class="font-contrast">Remove this game from collection?</h3>
    <input type="number" name="id" readonly />
    <section class="popup-actions">
        <button type="submit" class="borderless">Do something</button>
        <button type="button" onclick="hideRemoveFromCollectionModal()" class="btn-contrast rounded">Cancel</button>
    </section>
</form>