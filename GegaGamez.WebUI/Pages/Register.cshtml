@page
@model GegaGamez.WebUI.Pages.RegisterModel
@{
}

<div class="page-content-header border-primary ">
        <a class="go-back-arrow" href="#"><i class="fa-solid fa-arrow-left font-primary"></i></a>
        <h2 class="font-contrast title">Register</h2>
</div>
<form action="/" method="post" class="vertical-container auth-form" id="register-form">

    <div class="vertical-container">
        <label for="username">Username</label>
        <input id="username" type="text" name="username" value="" class="border-primary bg-secondary font-primary" />
    </div>

    <div class="vertical-container">
        <label for="password">Password</label>
        <input id="password" type="password" name="password" value="" class="border-primary bg-secondary font-primary" />
    </div>

    <div class="vertical-container">
        <label for="confirm-password">Confirm Password</label>

        <input id="confirm-password" type="password" name="confirmPasword" value="" class="border-primary bg-secondary font-primary" />
    </div>

    <div class="btn-group">
        <button id="register" type="submit" class="btn-contrast rounded">Register</button>
    </div>
</form>