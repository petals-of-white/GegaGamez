@page
@model GegaGamez.WebUI.Pages.Admin.ReportModel
@{
	ViewData["report"] = true;
}

<section id="report">
	<div><b class="font-contrast">Last updated: </b>@Model.LastUpdated</div>
	<div><b class="fat-text"> @Model.GamesQuantity</b> games</div>
	<div><b class="fat-text">@Model.UsersQuantity</b> users</div>
	<div>including <b class="fat-text">@Model.AdminsQuantity</b> admins</div>
	<div><b class="fat-text">@Model.DevsQuantity</b> developers</div>
	<div><b class="fat-text">@Model.GenresQuantity</b> genres</div>
	<div><b class="fat-text">@Model.CommentsQuantity</b> comments</div>
	<div><b class="fat-text">@Model.AvgGameScore</b> - average rating</div>
</section>